# ==============================================
# MARITIME DASHBOARD - BACKEND CONFIGURATION
# ==============================================

# Server Configuration
NODE_ENV=development
PORT=5000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/maritime_dashboard
# If localhost fails, try: MONGO_URI=mongodb://127.0.0.1:27017/maritime_dashboard
# Or use MongoDB Atlas: MONGO_URI=mongodb+srv://<user>:<password>@cluster.mongodb.net/maritime_dashboard?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=production_secret_key_change_me
JWT_EXPIRE=30d
